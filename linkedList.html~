<!DOCTYPE>
<html>
    <body>	
	<title>LinkedList</title>
	<p>Enter sentence you want</p><br>
	<input type="text" id="string"><br>
	<p>Enter word want to search</p><br>
	<input type = "text" id = "word"><br>
	
		<script>
			var string = document.getElementById("string").value;
			var value = document.getElementById("word").value;
			var arr = string.split(" ");
			var count = 0;
			console.log(arr);
			function node(value)
			{
				this.value = value;
				this.next = null;
			}
			node.prototype =
			{
				getValue: function()
				{
					return this.value;
				},
				getNext: function()
				{
					return this.next;
				},
				setValue : function(value)
				{
					this.value = value;
				},
				setNext : function(next)
				{
					this.next = next;
				}
			} ;
			function linkedList()
			{
				this.head = null ,this.tail ;
				
			}
			linkedList.prototype = 
			{
				add : function(value)
				{
					
					var current = new node(value);
					//current.setValue(value);
					if (this.head == null)
					{
						this.head = current;
						this.tail = current;
					}
					else
					{	this.tail = this.tail.setNext(current);
						this.tail = current;
						
					}
				},
				Search : function (value)
				{
					var  tmp; 
					tmp = this.head;
					while(tmp !== null)
					{
						if(value === tmp.getValue())
						{
							console.log("word removed");
							document.write("word removed");
							this.remove(value);
							count++;
							break;
						}
						else
						{
							tmp = tmp.getNext();
						}
					}
					if(count == 0)
					{
						console.log("Word added");
						document.write("word added");
						this.add(value);
					}
					
				},
				remove: function(value)
				{
					//var tmp, tmp2;
					var tmp = this.head;
					var tmp2 = tmp.getNext();
					//console.log(tmp.getNext());
					var newNode = node(value);
					if(value === tmp.getValue())
					{
						this.head = this.head.getNext();
					}
					else
					{
						while(tmp2 !== null )
						{
							if(value === tmp2.getValue())
							{
								tmp.setNext(tmp2.getNext());
								break;
							}
							else
							{
								tmp = tmp2;
								tmp2 = tmp2.getNext();
							}
						}
					}
				},
				printList : function()
				{
					var tmp;
					tmp = this.head;  
	
					if(tmp == null)
					{
						document.write("list is empty");
					}
					else
					{
						while(tmp != null)  
						{            
							var str= tmp.getValue();
							document.write("list element is : " + str +"<br>");
							console.log(str );
							tmp = tmp.getNext();  

						}
					}
				}

			};
			var link = new linkedList();
			for(var i=0 ; i<arr.length;i++)
			{
				console.log(link.add(arr[i]));
				//link.add(arr[i])
			}
			link.Search(value);
			link.printList();
		</script>
	</body>
